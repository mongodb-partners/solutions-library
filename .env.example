# MongoDB Atlas Configuration
# Shared cluster with separate databases per solution
MONGODB_URI=mongodb+srv://<username>:<password>@cluster.mongodb.net/
# MONGO_URI is an alias required by Cohere solution
MONGO_URI=mongodb+srv://<username>:<password>@cluster.mongodb.net/
# MONGODB_DB is required by LangChain solution
MONGODB_DB=langchain_research_agent

# TogetherAI Database Name
TOGETHERAI_DB_NAME=togetherai_opensource

# AWS Configuration (for Bedrock-based solutions)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key

# Temporal Configuration
TEMPORAL_HOST=temporal:7233
TEMPORAL_NAMESPACE=default

# AI Provider API Keys
GROQ_API_KEY=your_groq_api_key
VOYAGE_API_KEY=your_voyage_api_key
COHERE_API_KEY=your_cohere_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key
FIREWORKS_API_KEY=your_fireworks_api_key
FIREWORKS_MODEL_ID=accounts/fireworks/models/llama-v3p3-70b-instruct
TOGETHER_API_KEY=your_together_api_key

# Application Configuration
APP_ENV=development
LOG_LEVEL=INFO

# Service Ports (for Docker)
WEB_PORT=3100
GATEWAY_PORT=8080
TEMPORAL_API_PORT=8001
TEMPORAL_UI_PORT=8505
ANTHROPIC_UI_PORT=8502
COHERE_UI_PORT=8503
LANGCHAIN_UI_PORT=8504
FIREWORKS_API_PORT=8006
FIREWORKS_UI_PORT=8506
TOGETHERAI_API_PORT=8007
TOGETHERAI_UI_PORT=8507
